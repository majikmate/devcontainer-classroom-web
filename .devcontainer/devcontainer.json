{
    // Extends the base devcontainer configuration for classroom environment
    "name": "Classroom Environment",
    "image": "ghcr.io/majikmate/devcontainer-base:latest",

    // Override common-utils to use student user
    "features": {
    },

    // Classroom-specific VS Code configuration
    "customizations": {
        "vscode": {
            "extensions": [
                // Educational extensions
                "ritwickdey.LiveServer",
                "tyriar.lorem-ipsum",

                // Disable extensions that might interfere
                "-dbaeumer.vscode-eslint",
                "-github.vscode-pull-request-github",

                // Disable AI extensions for classroom use
                "-github.copilot",
                "-github.copilot-chat"
            ],
            "settings": {
                // Disable AI features
                "chat.disableAIFeatures": true,

                // Hide secondary sidebar to prevent Copilot chat visibility
                "workbench.secondarySideBar.defaultVisibility": "hidden",

                // Disable extension recommendations
                "extensions.ignoreRecommendations": true,
                "extensions.ignoreWorkspaceRecommendations": true,

                // Hide configuration folders from students
                "files.exclude": {
                    "**/.devcontainer": true,
                    "**/.github": true,
                    "**/.vscode": true
                }
            }
        }
    }
}
